.text{
  border: 1px solid black;
  width: 80%;
  height: 40%;
  overflow: auto;
  border-radius: 50rpx;
  font-size: 30rpx;
  user-select: all;
  padding: 140rpx 60rpx;
  background-size: cover;
  background-repeat:no-repeat; 
  background-image: url('https://pets-shop.oss-cn-beijing.aliyuncs.com/tarot/xinzhi.png');
}
.backIndex{
  width: 150rpx;
  height: 100rpx;
  background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fa709a;
  font-size: 30rpx;
  margin-top: 50rpx;
}