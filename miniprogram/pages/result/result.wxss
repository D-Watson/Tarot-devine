.scroll-box{
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  height: 40vh;
  margin: 50rpx;
}

.card-box{
  display: inline-block;
  width: 100%;
}
.card-group{
  display: flex;
  justify-content: center;
}
.card{
  width: 40%;
}
.text-group{
  display: flex;
  flex-direction: column;
  width: 20%;
  margin-left: 50rpx;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: white
}
.name{
  font-size: 0.7em;
  margin-top: 75rpx;
  background-image: linear-gradient(to top, #a18cd1 0%, #fbc2eb 100%);
  padding: 10rpx;
  border-radius: 20rpx;
}

.img{
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: 25% 50%;
}
