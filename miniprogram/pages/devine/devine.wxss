.setting-page{
  width:100%;
  height: 100%;
  background-size: cover;
  background-image: url("https://p5.itc.cn/q_70/images03/20210919/1c90a884dad34c30a5652bdf562883a9.gif");
  background-repeat:no-repeat; 
  position: absolute;
}
.card-row{
  display: flex;
  /* 子元素会均匀地分布在容器内 */
  justify-content: center;
  align-items: center;
  margin-left: 115rpx;
  position: fixed;
  top: 400px;
  left: 20px;
}

.before{
  position: absolute;
  width: 150rpx;
  height: 300rpx;
  border: 1px solid black;
  display: flex;
  top:20px;
  left:20px;
  justify-content: center;
  align-items: center;
}
.now{
  width: 150rpx;
  height: 300rpx;
  position: absolute;
  border: 1px solid black;
  display: flex;
  top:20px;
  left: 130px;
  justify-content: center;
  align-items: center;
}
.future{
  width: 150rpx;
  height: 300rpx;
  position: absolute;
  top: 20px;
  left: 240px;
  border: 1px solid black;
  display: flex;
  justify-content: center;
  align-items: center;
}
.picked-cards{
  display: flex;
  justify-content: space-between;
  position: relative;
}
.glowing-button {
  margin-top: 25rpx;
  width: 75vw;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: linear-gradient(to top, #a18cd1 0%, #fbc2eb 100%);
  border-radius: 10px;
  color: white;
  font-size: 37rpx;
  transition: 0.5s;
  cursor: pointer;
  margin-left: 12vw;
  margin-top: 500rpx;
}
 
.glowing-button:hover {
  box-shadow: 0 0 20rpx #a18cd1;
  filter: brightness(1.2); /* 提高亮度 */
}